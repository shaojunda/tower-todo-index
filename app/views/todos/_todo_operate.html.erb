<% if current_user && current_user.has_permission_to_operate_todo?(get_project_id(todo)) %>
  <%= link_to("修改", edit_todo_path(todo), class: "btn btn-sm btn-default") %>
<% end %>
<% if current_user && current_user.is_owner?(get_project_id(todo)) %>
  <%= link_to("删除", todo_path(todo), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "确定要删除这条任务吗？"}) %>
<% end %>
