<div class="text-center">
  <h1><%= @team.name %></h1>
</div>
<div class="col-md-12">
  <div class="group">
    <%= link_to("创建项目", new_team_project_path(@team), class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>项目名称</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "project_item", :collection => @projects, :as => :project  %>
    </tbody>
  </table>
</div>
<div class="text-center">
  <%= will_paginate @projects %>
</div>
