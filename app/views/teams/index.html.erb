<div class="col-md-12">
  <div class="group">
    <%= link_to("创建团队", new_team_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>团队名称</td>
        <td>超级管理员</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "team_item", :collection => @teams, :as => :team  %>
    </tbody>
  </table>
</div>
<div class="text-center">
  <%= will_paginate @teams %>
</div>
